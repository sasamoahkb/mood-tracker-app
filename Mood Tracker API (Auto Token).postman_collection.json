{
	"info": {
		"_postman_id": "9a3aa46b-1bcb-4f78-9cce-b5a2e9b64306",
		"name": "Mood Tracker API (Auto Token)",
		"description": "Test collection for Mood Tracker backend with automatic JWT token saving.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "36625875"
	},
	"item": [
		{
			"name": "Signup",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"TestUser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"TestPass123\"\n}"
				},
				"url": { "raw": "http://localhost:3000/signup", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["signup"] }
			}
		},
		{
			"name": "Login (Save Token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let jsonData = pm.response.json();",
							"if (jsonData.token) {",
							"    pm.collectionVariables.set('authToken', jsonData.token);",
							"    console.log('Token saved:', jsonData.token);",
							"} else {",
							"    console.warn('No token found in response');",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"TestPass123\"\n}"
				},
				"url": { "raw": "http://localhost:3000/login", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["login"] }
			}
		},
		{
			"name": "Create Mood Entry",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" },
					{ "key": "Authorization", "value": "Bearer {{authToken}}", "type": "text" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"mood\": \"Happy\",\n  \"mood_rating\": 8,\n  \"notes\": \"Had a great lunch\",\n  \"location\": \"Home\",\n  \"factors\": [\n    { \"factor_id\": 1, \"intensity\": 7 },\n    { \"factor_id\": 2, \"intensity\": 6 }\n  ]\n}"
				},
				"url": { "raw": "http://localhost:3000/create-mood-entry", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["create-mood-entry"] }
			}
		},
		{
			"name": "Get Mood History",
			"request": {
				"method": "GET",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{authToken}}", "type": "text" }
				],
				"url": { "raw": "http://localhost:3000/mood-history", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["mood-history"] }
			}
		},
		{
			"name": "Get All Factors",
			"request": {
				"method": "GET",
				"header": [],
				"url": { "raw": "http://localhost:3000/factors", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["factors"] }
			}
		},
		{
			"name": "Create Factor",
			"request": {
				"method": "POST",
				"header": [
					{ "key": "Content-Type", "value": "application/json" },
					{ "key": "Authorization", "value": "Bearer {{authToken}}", "type": "text" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Test Factor\",\n  \"category\": \"Sleep\",\n  \"icon\": \"bed\"\n}"
				},
				"url": { "raw": "http://localhost:3000/factors", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["factors"] }
			}
		},
		{
			"name": "Update Factor",
			"request": {
				"method": "PUT",
				"header": [
					{ "key": "Content-Type", "value": "application/json" },
					{ "key": "Authorization", "value": "Bearer {{authToken}}", "type": "text" }
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Updated Factor\",\n  \"category\": \"Nutrition\",\n  \"icon\": \"apple\"\n}"
				},
				"url": { "raw": "http://localhost:3000/factors/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["factors", "1"] }
			}
		},
		{
			"name": "Delete Factor",
			"request": {
				"method": "DELETE",
				"header": [
					{ "key": "Authorization", "value": "Bearer {{authToken}}", "type": "text" }
				],
				"url": { "raw": "http://localhost:3000/factors/1", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["factors", "1"] }
			}
		}
	],
	"variable": [
		{ "key": "authToken", "value": "" }
	]
}
